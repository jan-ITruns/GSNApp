<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ladebildschirm">

    <EditText
        android:id="@+id/etBenutzernameSchueler"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@color/schwarzTransparent"
        android:hint="Lernstatt-Benutzername"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/weiss"
        android:textColorHint="@color/weissTransparent"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPasswortSchueler"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/schwarzTransparent"
        android:hint="Lernstatt-Passwort"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/weiss"
        android:textColorHint="@color/weissTransparent"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBenutzernameSchueler" />

    <ImageButton
        android:id="@+id/imgbtnPasswortZeigen"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/etPasswortSchueler"
        app:layout_constraintEnd_toEndOf="@+id/etPasswortSchueler"
        app:layout_constraintTop_toTopOf="@+id/etPasswortSchueler"
        app:srcCompat="@drawable/ic_remove_red_eye_weiss_24dp" />

    <Button
        android:id="@+id/btnAnmelden"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="145dp"
        android:text="Anmelden"
        android:textAllCaps="false"
        android:textColor="@color/schwarz"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPasswortSchueler" />

    <ProgressBar
        android:id="@+id/progressBarSchueler"
        style="?android:attr/progressBarStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp"
        android:indeterminateBehavior="repeat"
        android:indeterminateTint="@color/schwarz"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAnmelden" />

    <Button
        android:id="@+id/btnJgs5"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:background="@color/hintergrundDunkel"
        android:text="5"
        app:layout_constraintStart_toStartOf="@+id/etPasswortSchueler"
        app:layout_constraintTop_toBottomOf="@+id/tvJahrgangsstufe" />

    <Button
        android:id="@+id/btnJgs6"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@color/hintergrundDunkel"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/btnJgs5"
        app:layout_constraintTop_toTopOf="@+id/btnJgs5" />

    <Button
        android:id="@+id/btnJgs7"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:background="@color/hintergrundDunkel"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@+id/btnJgs8"
        app:layout_constraintTop_toTopOf="@+id/btnJgs6" />

    <Button
        android:id="@+id/btnJgs8"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:background="@color/hintergrundDunkel"
        android:text="8"
        app:layout_constraintEnd_toEndOf="@+id/etPasswortSchueler"
        app:layout_constraintTop_toTopOf="@+id/btnJgs7" />

    <Button
        android:id="@+id/btnJgs9"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/hintergrundDunkel"
        android:text="9"
        app:layout_constraintStart_toStartOf="@+id/btnJgs5"
        app:layout_constraintTop_toBottomOf="@+id/btnJgs5" />

    <Button
        android:id="@+id/btnJgs10"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@color/hintergrundDunkel"
        android:text="10"
        app:layout_constraintStart_toStartOf="@+id/btnJgs6"
        app:layout_constraintTop_toTopOf="@+id/btnJgs9" />

    <Button
        android:id="@+id/btnJgs11"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@color/hintergrundDunkel"
        android:text="11"
        app:layout_constraintStart_toStartOf="@+id/btnJgs7"
        app:layout_constraintTop_toTopOf="@+id/btnJgs10" />

    <Button
        android:id="@+id/btnJgs12"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@color/hintergrundDunkel"
        android:text="12"
        app:layout_constraintStart_toStartOf="@+id/btnJgs8"
        app:layout_constraintTop_toTopOf="@+id/btnJgs11" />

    <TextView
        android:id="@+id/tvJahrgangsstufe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:text="Jahrgangsstufe auswÃ¤hlen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPasswortSchueler" />

</android.support.constraint.ConstraintLayout>